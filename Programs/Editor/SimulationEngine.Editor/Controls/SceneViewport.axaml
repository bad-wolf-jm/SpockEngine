<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:SimulationEngine.Editor.Desktop.Controls">
  <Design.PreviewWith>
    <controls:SceneViewport />
  </Design.PreviewWith>

  <Style Selector="controls|SceneViewport">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <Border Background="{TemplateBinding Background}" BorderBrush="Red" BorderThickness="3" Margin="10">
          <Image Source="{TemplateBinding Framebuffer}" Stretch="None" />
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
