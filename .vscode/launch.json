    "version": "0.2.0",
    "configurations": [
        {
            "name": "SE_Run Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/Source/SE_Run.exe",
            "args": [ "--project", "TestProject", "--width", "2900", "--height", "1350" ],
            "cwd": "${workspaceFolder}/Programs/TestProject",
            "stopAtEntry": false
        },
        {
            "name": "OTDR_Run Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/Source/OTDR_Run.exe",
            "args": ["--application", "OlmDevTool", "--width", "2320", "--height", "1340" ],
            "cwd": "${workspaceFolder}/Programs/TestOtdrProject",
            "stopAtEntry": false
        },
        {
            "name": "OTDR_ScriptRun Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/Tools/RunScript/RunScript.exe",
            "args": [ "--project", "TestOtdrProject", "--script", "Test.TestPowerMeter" ],
            "cwd": "${workspaceFolder}/Programs/TestOtdrProject",
            "stopAtEntry": false
        },
        {
            "name": "SE_Test Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/Tests/lste_cuda_test.exe",
            "cwd": "${workspaceFolder}/Programs/TestProject",
            "stopAtEntry": false
        },
        {
            "name": "MonoExfo",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/Programs/TestMonoExfo/test_mono_exfo.exe",
            "cwd": "${workspaceFolder}/Programs/TestProject",
            "stopAtEntry": false
        }

    ]
}